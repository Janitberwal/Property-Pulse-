generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id          String   @id @default(uuid())
  owner       String
  name        String
  type        String
  description String
  beds        Int
  baths       Int
  squareFeet  Int       @map("square_feet")
  isFeatured  Boolean   @map("is_featured")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Flattened Location fields
  street      String
  city        String
  state       String
  zipcode     String

  // Flattened Rate fields
  nightly     Int?
  weekly      Int?
  monthly     Int?

  // Flattened Seller Info
  sellerName  String
  sellerEmail String
  sellerPhone String

  amenities   String[]  
  images      String[]

  @@map("properties")
}
model User {
  id             String   @id @default(cuid())
  name           String?
  email          String?  @unique
  emailVerified  DateTime?
  image          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
